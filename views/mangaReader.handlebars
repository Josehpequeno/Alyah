<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <title>Alyah</title>
    <link class="rounded-circle" href="/static/images/favicon.ico" rel="icon" />
    <link rel="stylesheet" href="/nd_md/tailwindcss/dist/base.min.css" />
    <link rel="stylesheet" href="/nd_md/tailwindcss/dist/components.min.css" />
    <link rel="stylesheet" href="/nd_md/tailwindcss/dist/utilities.min.css" />
    <link rel="stylesheet" href="/static/css/index.min.css" />
</head>

<body>
    <div id="navbar" class="bg-color-secundary">
        <header class="text-gray-100 body-font shadow w-full">
            <div class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center text-white">
                <nav class="flex lg:w-2/5 flex-wrap items-center text-base">
                    <a href="/manga"
                        class="mr-5 hover:text-white-900 cursor-pointer border-b border-transparent hover:border-green-600">Mang√°
                        page</a>
                    <div class="relative">
                        <select id="options" onchange="optionsChange();"
                            class="block w-full bg-color-secundary border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline">
                            {{{options}}}
                        </select>
                    </div>
                    <div class="px-5 fill-current text-white" @click="fullscreen">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                            <path
                                d="M0 0v24h24v-24h-24zm20 11.333l-2.253-2.252-8.667 8.667 2.253 2.252h-7.333v-7.333l2.252 2.252 8.667-8.667-2.252-2.252h7.333v7.333z" />
                        </svg>
                    </div>
                </nav>
            </div>
        </header>
    </div>
    <div id="content" class="md:container md:mx-auto py-1 px-4 md:items-center h-screen">
        <div class="manga-page h-screen">
            {{{images}}}
        </div>
    </div>
    <input id="length" class="hidden" value="{{length}}" />
    <script src="/nd_md/handlebars/dist/handlebars.min.js"></script>
    <script src="/nd_md/jquery/dist/jquery.min.js"></script>
    <script src="/nd_md/jquery/dist/jquery.slim.min.js"></script>
    <script src="/nd_md/popper.js/dist/umd/popper.min.js"></script>
    <script>
        function optionsChange() {
            let pages = Number($('#length').val());
            let opt = Number($('#options').val());
            for (let i = 0; i < pages; i++) {
                let $box = $(`#page_${i}`);
                if (i != opt) {
                    $box.addClass("hidden");
                }
                else {
                    $box.removeClass("hidden");
                }
            }
        }
        $(document).ready(function () {
            return optionsChange();
        });
    </script>
    <script>
        function arrow(d) {
            let i = d - 38;
            let pages = Number($('#length').val());
            let opt = Number($('#options').val());
            console.log(opt);
            console.log("pages:  " + pages);
            if (i > 0 && opt + 1 < pages) {
                console.log("i: " + i);
                $('#options').val(opt + i);
            }
            else if (i < 0 && opt - 1 >= 0) {
                console.log("i: " + i);
                $('#options').val(opt + i);
            }
        }
        document.onkeyup = function (e) {
            //console.log(e.keyCode);
            if (e.keyCode === 39) {
                arrow(e.keyCode);
                console.log("hereR");
            }
            else if (e.keyCode === 37) {
                arrow(e.keyCode);
                console.log("hereL");
            }
            optionsChange();
        }
    </script>
</body>

</html>